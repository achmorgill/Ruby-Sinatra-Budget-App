<a href="/">Home Page</a>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Date</th>
      <th>User</th>
      <th>Category</th>
      <th>Description</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction|%>
     
      <td>
      <a href="/transactions/<%=transaction%>/edit">Update</a>
      </td>

        <td><%=transaction.transaction_date%></td> 

        <% @users.each do |user| %>
          <% if user.id == transaction.user_id %>
            <td><%=user.name%></td>
          <%end%>
        <%end%>

        <% @categories.each do |category| %>
          <% if category.id == transaction.category_id %>
            <td><%=category.name%></td>
          <%end%>
        <%end%>
       

        <td><%=transaction.description%></td>
        <td><%=sprintf("%.2f",transaction.amount)%></td> 

      </tr>
    <%end%> 
  </tbody>
</table>
<a href="/transactions/new">Add a New Transaction</a>


